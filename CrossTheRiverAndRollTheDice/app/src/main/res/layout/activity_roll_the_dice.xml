<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_roll_the_dice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.rome.ancient.crosstheriverandrollthedice.RollTheDiceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_number"
        android:id="@+id/rolled_number_label"
        app:layout_constraintLeft_toLeftOf="@+id/activity_roll_the_dice"
        app:layout_constraintTop_toTopOf="@+id/activity_roll_the_dice"
        app:layout_constraintRight_toLeftOf="@+id/button"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_roll_the_dice"
        app:layout_constraintHorizontal_bias="0.33" />

    <Button
        android:text="@string/dice_roll"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:id="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/activity_roll_the_dice"
        app:layout_constraintRight_toRightOf="@+id/activity_roll_the_dice"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_roll_the_dice" />

    <TextView
        android:text="@string/start_value"
        android:layout_width="50dp"
        android:layout_height="21dp"
        android:id="@+id/rolled_value"
        app:layout_constraintLeft_toLeftOf="@+id/rolled_number_label"
        app:layout_constraintTop_toBottomOf="@+id/rolled_number_label"
        android:layout_marginTop="48dp"
        app:layout_constraintRight_toRightOf="@+id/rolled_number_label" />

    <TextView
        android:text="@string/application_function_explanation"
        android:layout_width="282dp"
        android:layout_height="55dp"
        android:id="@+id/introduction_text"
        app:layout_constraintLeft_toLeftOf="@+id/activity_roll_the_dice"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@+id/activity_roll_the_dice"
        android:layout_marginTop="112dp"
        app:layout_constraintRight_toRightOf="@+id/activity_roll_the_dice"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        app:layout_constraintLeft_toLeftOf="@+id/activity_roll_the_dice"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/introduction_text"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="@+id/activity_roll_the_dice"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_one_to_rule_them_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trying.die.or.rich.get.applicationthatwillmakemerich.OneActivityToRuleThemAll">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_one_to_rule_them_all"
        app:layout_constraintTop_toTopOf="@+id/activity_one_to_rule_them_all"
        app:layout_constraintRight_toRightOf="@+id/activity_one_to_rule_them_all"
        app:layout_constraintBottom_toBottomOf="@+id/activity_one_to_rule_them_all"
        app:layout_constraintVertical_bias="0.46" />

    <Button
        android:text="@string/new_string"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:onClick="onShowMeClick"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/activity_one_to_rule_them_all"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="88dp"
        app:layout_constraintRight_toRightOf="@+id/activity_one_to_rule_them_all" />

    <RadioButton
        android:text="RadioButton"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:id="@+id/radioButton"
        app:layout_constraintLeft_toLeftOf="@+id/activity_one_to_rule_them_all"
        app:layout_constraintRight_toRightOf="@+id/activity_one_to_rule_them_all"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
